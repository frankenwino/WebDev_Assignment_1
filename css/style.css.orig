/* Base styles for all screen sizes */

body {
    margin: 0;
}

header {
    max-width: 100%;
    height:auto;
    display: flex;
    flex-shrink: 1;
}

.menu-bar {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.nav-list {
    display: flex;
    justify-content: space-between;
    text-transform: uppercase;
    gap: 1rem;
}

a:link {
    text-decoration: none;
}

li {
    list-style-type: none;
}

